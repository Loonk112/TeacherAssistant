<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/mainCoursesItemTemplateRemoveIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="Button to remove item"
        android:src="@drawable/ic_baseline_remove_24" />

    <TextView
        android:id="@+id/mainCoursesItemTemplateId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ID" />

    <TextView
        android:id="@+id/mainCoursesItemTemplateName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:text="Name" />

    <TextView
        android:id="@+id/mainCoursesItemTemplateYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Year" />

    <ImageButton
        android:id="@+id/mainCoursesItemTemplateDetailsIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="Button to details"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

</LinearLayout>