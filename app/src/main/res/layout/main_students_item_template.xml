<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/mainStudentsItemTemplateRemoveIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="Button to remove item"
        android:src="@drawable/ic_baseline_remove_24" />

    <TextView
        android:id="@+id/mainStudentsItemTemplateId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="ID" />

    <TextView
        android:id="@+id/mainStudentsItemTemplateName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Name" />

    <TextView
        android:id="@+id/mainStudentsItemTemplateSurame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Surname" />

    <TextView
        android:id="@+id/mainStudentsItemTemplateGrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="Grade" />

    <ImageButton
        android:id="@+id/mainStudentsItemTemplateDetailsIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:contentDescription="Button to details"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

</LinearLayout>